<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Given Items</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Navbar Styling */
        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid black;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            padding: 10px 0;
        }

        .navbar-nav .nav-item {
            margin-right: 20px;
        }

        .main-content {
            padding-top: 120px;
        }

        /* Footer Styling */
        .footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            font-size: 14px;
            border-top: 1px solid #ccc;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Dashboard Styling */
        body {
            background-color: #f4f4f4;
            font-family: 'Poppins', sans-serif;
        }

        .dashboard-container {
            padding: 30px;
        }

        /* Table Styling */
        .table th {
            background-color: #ffcc99;
        }
        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        /* Image Styling */
        .table img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn-danger {
            background-color: #d9534f;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c9302c;
        }

        #topname {
            color: orange;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a id="topname" class="navbar-brand fw-bold" href="/">Equipment Rental</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/renteditems">Rented Items</a></li>
                    <li class="nav-item"><a class="nav-link" href="/aboutus">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-danger" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h2 class="text-center text-orange mb-4">Your Given Items</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover bg-white shadow">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price Per Hour</th>
                        <th>Owner</th>
                        <!-- <th>Status</th> -->
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% let givenItems = items.filter(item => String(item.owner._id) === String(user._id)); %>
                    <% if (givenItems.length > 0) { %>
                        <% givenItems.forEach(item => { %>
                            <tr>
                                <td><img src="<%= item.image %>" alt="Item Image"></td>
                                <td><%= item.name %></td>
                                <td>â‚¹<%= item.price %></td>
                                <td>
                                    <span class="text-primary">You</span>
                                </td>
                                <!-- <td>
                                    <% if (item.isRented) { %>
                                        <span class="text-success">Rented</span>
                                    <% } else { %>
                                        <span class="text-danger">Available</span>
                                    <% } %>
                                </td> -->
                                <td>
                                    <% if (!item.isRented) { %>
                                        <form action="/items/delete/<%= item._id %>" method="POST">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    <% } else { %>
                                        <span class="text-muted">Not Deletable</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center text-muted">No items uploaded yet.</td>
                        </tr>
                    <% } %>
                </tbody>
                
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5">
        <div class="container">
            <p>&copy; 2025 Equipment Rental Pvt. Ltd. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
